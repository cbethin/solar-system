{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@/*": ["src/*"],
			"@/components/*": ["./src/components/*"],
			"@/lib/*": ["./src/lib/*"]
		}
	},
	"include": ["vite.config.ts"]
}
